{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "groupName": "dotnet-dependencies",
      "matchManagers": [
        "nuget"
      ]
    },
    {
      "groupName": "flutter-dependencies",
      "matchManagers": [
        "pub"
      ]
    },
    {
      "groupName": "react-dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchPaths": [
        "apps/admin_page/**"
      ],
      "matchPackagePatterns": [
        "^react",
        "^@types/react",
        "eslint-plugin-react",
        "vitejs/plugin-react",
        "lucide-react"
      ]
    }
  ]
}
