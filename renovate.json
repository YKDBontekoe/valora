{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "groupName": "dotnet-dependencies",
      "matchManagers": [
        "nuget"
      ]
    },
    {
      "groupName": "flutter-dependencies",
      "matchManagers": [
        "pub"
      ]
    }
  ]
}
